<Window x:Class="HistBackup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IE10 History Backup" Height="260" Width="600" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Internet Explorer 10 履歴ファイルのバックアップ" Margin="10,10,10,0" FontSize="18" FontWeight="Bold" Height="33" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label Content="コピー元ディレクトリ" Margin="26,54,0,0" VerticalAlignment="Top" Height="25" HorizontalAlignment="Left" Width="109"/>
        <TextBlock Margin="40,84,10,0" TextWrapping="NoWrap" x:Name="SourceDirectoryText" VerticalAlignment="Top"/>
        <Label Content="コピー先ディレクトリ" Margin="26,104,0,0" VerticalAlignment="Top" Height="25" Width="109" HorizontalAlignment="Left"/>
        <Button Content="開始" Margin="0,0,10,10" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Grid.Column="1" Click="Button_Click"/>
        <TextBox Height="23" Margin="40,134,10,0" TextWrapping="NoWrap" Text="TextBox" VerticalAlignment="Top" VerticalContentAlignment="Center" x:Name="DestinationDirectoryText" TextChanged="DestinationDirectoryText_TextChanged"/>
    </Grid>
</Window>
